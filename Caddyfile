# global options
{
	admin off
	persist_config off
	auto_https on

	log {
		format json
	}

	servers {
		trusted_proxies static private_ranges
	}
}

:{$PORT} {

	handle_path /backend/* {
		reverse_proxy sinatle-api.railway.internal:5050
	}

	handle {
		reverse_proxy sinatle-ui.railway.internal:8080
	}
}

